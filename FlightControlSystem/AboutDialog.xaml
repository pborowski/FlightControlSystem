<Window x:Class="FlightControlSystem.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightControlSystem"
        mc:Ignorable="d"
        Title="About" Height="200" Width="350" Background="AliceBlue" Icon="Images/icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Height="50" Source="Images/airport.png" Margin="0,50,0,70"></Image>
        <TextBlock  Grid.Column="1">
            <TextBlock.Margin>10,50</TextBlock.Margin>
            
            <LineBreak/>    
            Flight Control Stystem v2.0
            <LineBreak/>
            Designed by Paweł Borowski
            
            
        </TextBlock>
    </Grid>
</Window>
